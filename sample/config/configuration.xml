<?xml version="1.0" encoding="UTF-8"?>
<!-- Test configuration definition file that demonstrates complex initialization -->
<configuration>
  <header>
    <result forceReloadCheck="true">
      <expressionEngine config-class="org.apache.commons.configuration.tree.xpath.XPathExpressionEngine"/>
    </result>
  </header>
  <xml fileName='session.xml' config-name="session">
    <reloadingStrategy refreshDelay="10000"
      config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>  
  </xml>
  <xml fileName='session2.xml' config-name="session2">
    <reloadingStrategy refreshDelay="10000"
      config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>  
  </xml>  
  <properties fileName="dev.properties" throwExceptionOnMissing="true"
      config-name="dev" config-optional="true">
      <reloadingStrategy refreshDelay="10000"
      config-class="org.apache.commons.configuration.reloading.FileChangedReloadingStrategy"/>
  </properties>
</configuration>